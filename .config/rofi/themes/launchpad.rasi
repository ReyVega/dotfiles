* {
    font: "Montserrat 9";

    bg0:  #24242480;
    bg1:  #363636;
    bg2:  #f5f5f520;
    bg3:  #f5f5f540;
    bg4:  #5E81AC;

    fg0:  #f5f5f5;
    fg1:  #f5f5f580;

    background-color: transparent;
    text-color:       @fg0;
    padding:          0px;
    margin:           0px;
}

window {
    fullscreen:         true;
    padding:            1em;
    background-color:   @bg0;
}

mainbox {
    padding:  22px 8px 8px 8px;
}

inputbar {
    background-color: @bg2;
    margin:           0px calc( 50% - 120px );
    padding:          4px 6px;
    spacing:          4px;
    border:           1px;
    border-radius:    1em;
    border-color:     @bg3;
    children:         ["textbox-prompt-colon", "entry"];
}

prompt {
    enabled:          false;
}

textbox-prompt-colon {
    enabled:            true;
    expand:             false;
    text-color: 		@fg1;
    font:		        "Hack Nerd Font 9";
    vertical-align:     0.5;
    str:                "ï€‚";
    padding: 			0px 6px 0px 2px;
}

icon-search {
  expand:           false;
  filename:         "search";
  vertical-align:   0.5;
}

entry {
  placeholder:        "Search";
  placeholder-color:  @fg1;
}

listview {
  margin:           48px calc(50% - 560px);
  spacing:          48px;
  columns:          6;
  fixed-columns:    true;
}

element, element-text, element-icon {
  cursor: pointer;
}

element {
  padding:          8px;
  spacing:          4px;

  orientation:      vertical;
  border-radius:    16px;
}

element selected {
  background-color: @bg4;
}

element-icon {
  size:                 4em;
  horizontal-align:     0.5;
}

element-text {
  horizontal-align: 0.5;
}
