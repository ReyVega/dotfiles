* {
    font: "Montserrat Bold 12";

    bg0: #24242480;
    bg1: #363636;
    bg2: #f5f5f520;
    bg3: #f5f5f540;
    bg4: #0860f2E6;

    fg0: #f5f5f5;
    fg1: #f5f5f580;

    background-color: transparent;
    text-color: @fg0;
}

window {
    fullscreen: true;
    padding: 49% 42%;
    background-color: @bg0;
}

entry {
    expand: true;
}

